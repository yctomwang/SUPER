<launch>
    <!-- Interactive mode: NO pre-computed waypoints.
         Send goals in real-time via:
           1. RViz "2D Nav Goal" button (click in the 3D view)
           2. Terminal: rostopic pub /planning/click_goal geometry_msgs/PoseStamped ...
           3. The interactive_goal_pub.py node (type coordinates live)
    -->

    <!-- Drone simulator with real stope point cloud -->
    <node pkg="perfect_drone_sim" type="perfect_drone" name="perfect_drone" output="log">
        <param name="config_name" value="real_stope.yaml" type="string"></param>
    </node>

    <!-- SUPER planner -->
    <node pkg="super_planner" name="fsm_node" type="fsm_node" output="screen">
        <param name="config_name" value="real_stope.yaml" type="string"></param>
    </node>

    <!-- RViz visualization -->
    <node pkg="rviz" type="rviz" name="top_down"
          args="-d $(find perfect_drone_sim)/rviz/benchmark.rviz"
          output="log"/>
</launch>
